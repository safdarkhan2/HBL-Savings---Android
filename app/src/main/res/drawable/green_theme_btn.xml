<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="false" android:drawable="@drawable/disable_btn"/>
  <item android:state_pressed="false"
      android:drawable="@drawable/normal_btn" /> <!-- pressed -->
  <item android:state_pressed="true"
      android:drawable="@drawable/pressed_btn" /> <!-- focused -->
  <item android:state_enabled="true" android:drawable="@drawable/normal_btn"/> <!-- idle state -->
</selector>
