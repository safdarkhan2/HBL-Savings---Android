<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/disable_btn_2"/>
    <item android:state_pressed="false"
        android:drawable="@drawable/normal_btn_2" /> <!-- pressed -->
    <item android:state_pressed="true"
        android:drawable="@drawable/pressed_btn_2" /> <!-- focused -->
