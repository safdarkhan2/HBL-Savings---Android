<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dashboard_last_transactions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fund_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/half_rounded_green_2"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="@string/kyc_bracket"
            android:textColor="@color/white"
            android:textSize="@dimen/heading3" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_bg_3"
            android:elevation="4dp"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingVertical="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="AUG 24,2021"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Date"
                    android:textColor="@color/gray_text_2"
                    android:textSize="@dimen/med_text_size1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/units_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="0.0761"
                    android:textColor="@color/hbl_main_green"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Units"
                    android:textColor="@color/gray_text_2"
                    android:textSize="@dimen/med_text_size1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Rs.7.70"
                    android:textColor="@color/hbl_main_green"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Amount"
                    android:textColor="@color/gray_text_2"
                    android:textSize="@dimen/med_text_size1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Conversion From"
                    android:textColor="@color/yellow_theme"
                    android:textSize="@dimen/text_size_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Type"
                    android:textColor="@color/gray_text_2"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>


</LinearLayout>