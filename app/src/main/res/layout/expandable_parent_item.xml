<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_req_layout"
    android:layout_marginTop="10dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/requirement_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="17dp"
        android:orientation="vertical"
        android:id="@+id/count_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/ic_white_circle"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/gray_text"
            android:elevation="3dp"
            android:layout_marginBottom="5dp"/>

<!--
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
-->


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/requirement_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="1sdm dsk vkds  fkwfj"
        android:textColor="@color/hbl_main_green"
        android:textSize="@dimen/heading3"
        app:layout_constraintEnd_toStartOf="@+id/arrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/count_layout"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/requirement_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_down"
        android:layout_marginHorizontal="20dp"/>

<!--
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
-->


</androidx.constraintlayout.widget.ConstraintLayout>